        <record id="partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.ama.partner.email.templates</field>
            <field name="model">res.partner</field>
            <field name="priority">100</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <page name="sales_purchases" position="before">
                    <page string="E-Mail">
                        <group>
                            <field name="mail_template_account_invoice"/>
                            <field name="mail_template_purchase_order"/>
                            <field name="mail_template_sale_order"/>
                            <field name="mail_template_stock_picking"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>